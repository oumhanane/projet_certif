{% extends 'admin/base.html.twig' %}

{% block title %}Liste des produits
{% endblock %}

{% block body %}
	<div class="container py-5">

		<div class="row">

			<div class="col-12 d-flex align-items-center justify-content-between">
				<h3>Liste des produits</h3>
				<a class="btn btn-primary" href="{{ path('product_new') }}">Ajouter</a>


			</div>
		</div>
		{% for product in products %}
			<div class="col-sm-12 col-md-6 col-lg-4">
			<div class="card">
				<img src="{{ product.image }}" class="card-img-top" alt="image_produit">

				<div class="card-body">
					<h5 class="card-title">{{ product.name | upper }}</h5>
					<p class="card-text">{{ product.price | priceEuro }} </p>
					<a href="{{ path('product_edit', {'id' : product.id } ) }}" class="btn btn-primary">GÃ©rer</a>
				</div>
			</div>
			</div>


		{% endfor %}

	</div>
{% endblock %}
